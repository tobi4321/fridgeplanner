@model List<FridgeItem>
@{
    Layout = null;
}
<div class="table-wrapper-scroll-y my-custom-scrollbar">
    <table class="table table-bordered table-striped mb-0">
        <thead>
            <tr>
                <th width="30%" scope="col">Name</th>
                <th width="30%" scope="col">Haltbarkeit in Tagen</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <th scope="row">@Model.ElementAt(i).Name</th>
                    <td>
                        @Model.ElementAt(i).ExpiryDate.Subtract(DateTime.Today).TotalDays
                    </td>
                    <td>
                        <button onclick="editTP(@Model[i].FridgeItemId)" type="button" class="btn button-edit">
                            <i class="material-icons" style="font-size:20px">
                                edit
                            </i>
                        </button>
                        <!--Adding Modal----->
                    </td>
                    <td>
                        <button type="button" class="btn button-delete" data-toggle="modal" data-target="#modalDeleteTP@(Model[i].FridgeItemId)">
                            <i class="material-icons" style="font-size:20px">
                                delete_forever
                            </i>
                        </button>
                        <!--Adding Modal----->
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

