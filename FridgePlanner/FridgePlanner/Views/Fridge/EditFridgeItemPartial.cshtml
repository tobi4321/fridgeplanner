@model FridgePlanner.Models.ViewModels.EditFridgeViewModel;
@{ Layout = null; }
<!-- Modal Edit Fridge Item-->
<div class="modal fade" id="fridgeItemEditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <p class="heading lead">
                    <h4 class="modal-title" id="editNewsLabel">Ändere Kühlschrank Artikel</h4>
                </p>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="md-form">
                                <strong>Name</strong>
                                <input id="fridgeEditName" type="text" value="@Model.Item.Name" class="form-control" placeholder="FrdigeItem Name" aria-label="Exercisename" aria-describedby="basic-addon1">
                            </div>
                            <br />
                            <div class="md-form">
                                <strong>Menge</strong>
                                <input id="fridgeEditAmount" type="number" value="@Model.Item.Amount" class="form-control" placeholder="Amount" aria-label="Exercisename" aria-describedby="basic-addon1">
                            </div>

                            <br />
                            <div class="md-form">
                                <strong>Einheit</strong>
                                <select class="custom-select" id="fridgeEditUnit">
                                    @foreach (string category in Model.Units)
                                    {
                                        if (category.Equals(Model.Item.Unit))
                                        {
                                            <option selected value="@category">@category</option>
                                        }
                                        else
                                        {
                                            <option value="@category">@category</option>
                                        }

                                    }
                                </select>
                            </div>
                            <div class="md-form">
                                <strong>
                                    Haltbarkeitsdatum
                                </strong>
                                <input id="fridgeEditExpireDate" type="date" value="@string.Format("{0:yyyy-MM-dd}", Model.Item.ExpiryDate)" class="form-control" placeholder="Pick ExpireDate" aria-describedby="basic-addon1">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button onclick="updateFridgeItem(@Model.Item.Id)" type="button" data-dismiss="modal" class="btn btn-primary">Übernehme Änderung</button>
            </div>
        </div>
    </div>
</div>