@model List<FridgePlanner.Entities.Recipe>
@{
    ViewData["Title"] = "Recipe Page";
}
<h2> <u>Rezepte verwalten</u></h2>
<br />
<div class="row">

    <div class="col-8 table-wrapper-scroll-y recipe-scrollbar">
            <div id="recipeDetail" class="recipe-scrollbar">
                @if (Model.Count > 0)
                {
                    @await Html.PartialAsync("RecipeDetailPartial.cshtml", Model[0])
                }
                else
                {
                    @await Html.PartialAsync("RecipeDetailPartial.cshtml", new FridgePlanner.Entities.Recipe())
                }
            </div>
    </div>
    <div class="col-4">
        <a data-toggle="modal" data-target="#addRecipeModal" class="btn btn-success btn-block" style="color:white;">
            <span class="material-icons icon-large">
                add
            </span>
            <p class="button-text">
                Rezept hinzufügen
            </p>
        </a>
        @await Html.PartialAsync("RecipeIndexTablePartial.cshtml", Model)
    </div>
 </div>
    <br />
    <div class="row">
        <div class="col-sm-3">
            <a class="btn btn-dark" asp-controller="Fridge" asp-action="Index">Zurück zur Verwaltung</a>
            <br />
        </div>
    </div>
    <br />

<!-- Modal Add Recipe-->
<div class="modal fade text-black" id="addRecipeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index:5;" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading lead">
                    <h4 class="modal-title" id="editRecipeLabel">Neues Rezept</h4>
                </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">×</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form" style="margin-top:5px;">
                                <input id="addRecipeName" type="text" class="form-control" placeholder="Name des Rezepts" aria-describedby="basic-addon1">
                            </div>
                            <div class="md-form" style="margin-top:5px;">
                                <input id="addRecipeDescription" type="text" class="form-control" placeholder="Rezeptbeschreibung" aria-describedby="basic-addon1">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                <button onclick="addRecipe()" type="button" data-dismiss="modal" class="btn btn-success">Rezept erstellen</button>
            </div>
        </div>
    </div>
</div>