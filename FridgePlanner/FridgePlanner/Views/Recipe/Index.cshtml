@model List<Recipe>
@{
    ViewData["Title"] = "Recipe Page";
}
<h2>Rezepte verwalten</h2>
<br />
<div class="row">

    <div class="col-lg-6 col-md-12 col-sm-12 col-xl-6">
        <div class="recipeList-scrollbar polaroid">
            @await Html.PartialAsync("RecipeIndexTablePartial.cshtml", Model)
        </div>
    </div>
    <div class="col-lg-6 col-md-12 col-sm-12 col-xl-6">
        <div id="recipeDetail">
            @await Html.PartialAsync("RecipeDetailPartial.cshtml", Model[0])
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-2 align-content-start">
        <a class="btn button-back" asp-controller="Home" asp-action="Index">Back to the Home Page</a>
        <br />
    </div>
    <div class="col-2 align-content-start">
        <a data-toggle="modal" data-target="#addRecipeModal" class="btn button-save" style="color:white; margin-left: 25px;">
            Rezept hinzufügen
        </a>
    </div>
</div>

<!-- Modal Add Recipe-->
<div class="modal fade text-black" id="addRecipeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index:5;">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading lead">
                    <h4 class="modal-title" id="editRecipeLabel">Neues Rezept</h4>
                </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">×</span>
                </button>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="md-form" style="margin-top:5px;">
                                <input id="addRecipeName" type="text" class="form-control" placeholder="Enter the name" aria-describedby="basic-addon1">
                            </div>
                            <div class="md-form" style="margin-top:5px;">
                                <input id="addRecipeDescription" type="text" class="form-control" placeholder="Enter description" aria-describedby="basic-addon1">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-back" data-dismiss="modal">Close</button>
                <button onclick="addRecipe()" type="button" data-dismiss="modal" class="btn button-save">Rezept erstellen</button>
            </div>
        </div>
    </div>
</div>