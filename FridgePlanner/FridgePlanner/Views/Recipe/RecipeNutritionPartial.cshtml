@model FridgePlanner.Models.ViewModels.NutritionViewModel;
@{
    Layout = null;
}

<!-- Modal Nutrition Detail-->
<div class="modal text-black" id="recipeNutritionModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index:5;" data-backdrop="false">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p class="heading lead">
                    <h4 class="modal-title" id="NutritionLabel">Nährwerte des Rezepts</h4>
                </p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">×</span>
                </button>
            </div>

            <div class="modal-body">
                        <div class="table-wrapper-scroll-y nutrition-scrollbar" style="height: 40%;">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th colspan="3">Menge pro Portion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th colspan="2">
                                            <b>Kalorien</b>
                                        </th>
                                        <td>@Model.NutritionResponse.calories</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3">
                                            <b>Täglicher Bedarf</b>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            <b>Total Fat</b>
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Saturated Fat
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Trans Fat
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            <b>Cholesterol</b>
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            <b>Sodium</b>
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            <b>Total Carbohydrate</b>
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Dietary Fiber
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Total Sugars
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Includes - Added Sugars
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            <b>Protein</b>
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Vitamin D
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Calcium
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Iron
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                    <tr>
                                        <th colspan="2">
                                            Potassium
                                        </th>
                                        <td>@Model.NutritionResponse.totalNutrients.FAT.quantity @Model.NutritionResponse.totalNutrients.FAT.unit</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
