@model List<FridgePlanner.Entities.Recipe>
@{
    Layout = null;
}

@for (int i = 0; i < Model.Count(); i++)
{
    <div class="card" style="margin: 15px 15px 15px 15px;">
        <div class="card-header text-black">
            <h5><b>@Model.ElementAt(i).Name</b></h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.ElementAt(i).Description</p>

            <button onclick="updateRecipeDetail(@Model[i].Id)" type="button" class="btn btn-save btn-sm" data-toggle="tooltip" data-placement="top" title="Rezept anzeigen">
                <i class="material-icons" style="font-size:20px">
                    details
                </i>
            </button>
            <button onclick="editRecipePage(@Model[i].Id)" type="button" class="btn btn-save btn-sm" data-toggle="tooltip" data-placement="top" title="Rezept editieren">
                <i class="material-icons" style="font-size:20px">
                    edit
                </i>
            </button>
            <button onclick="addToCart(@Model[i].Id)" type="button" class="btn btn-save btn-sm" data-toggle="tooltip" data-placement="top" title="Zur Einkaufsliste hinzufügen">
                <i class="material-icons" style="font-size:20px">
                    shopping_cart
                </i>
            </button>
            <button onclick="openNutritionInfo(@Model[i].Id)" type="button" class="btn btn-save btn-sm" data-toggle="tooltip" data-placement="top" title="Nährwerte berechnen">
                <i class="material-icons" style="font-size:20px">
                    info
                </i>
            </button>
        </div>
    </div>

    <div class="modal fade text-black" id="waitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index:5;" data-backdrop="false">
        <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="heading lead">
                        <h4 class="modal-title" id="NutritionLabel">Lade Nährwert - informationen</h4>
                    </p>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="white-text">×</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="spinner-border"></div>
                </div>
            </div>
        </div>
    </div>


    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>

    <!-- Modal Recipe Added to Cart-->
    <div class="modal fade text-black" id="recipeToCartModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="z-index:5;" data-backdrop="false">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <p class="heading lead">
                        <h4 class="modal-title" id="editNewsLabel">Zutaten des Rezepts wurden zur Einkaufsliste hinzugefügt.</h4>
                    </p>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true" class="white-text">×</span>
                    </button>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
}

    <div id="recipeNutritionView">
        <!-- Modal Nutrition Detail-->

    </div>
